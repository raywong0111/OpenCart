<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
	<author>pavotheme</author>
	<name>Live Theme Editor</name>
	<layout>
		<item>
			<label>Enable Quickview</label>
			<block>Quickview</block>
			<default>0</default>
			<option>
				<text>Enable</text>
				<value>1</value>
			</option>
			<option>
				<text>Disable</text>
				<value>0</value>
			</option>
		</item>
		<item>
			<label>Logo Type</label>
			<block>logo_type</block>
			<default>logo-theme</default>
			<option>
				<text>Logo In Theme</text>
				<value>logo-theme</value>
			</option>
			<option>
				<text>Logo Opencart</text>
				<value>logo-opencart</value>
			</option>
		</item>
		<item>
			<label>Layout Header</label>
			<block>header_layout</block>
			<default>headerv1</default>
			<option>
				<text>Header version 1</text>
				<value>headerv1</value>
			</option>
			<option>
				<text>Header version 2</text>
				<value>headerv2</value>
			</option>
			<option>
				<text>Header version 3</text>
				<value>headerv3</value>
			</option>
			<option>
				<text>Header version 4</text>
				<value>headerv4</value>
			</option>
  		</item>
		<item>
			<label>Footer Layout</label>
			<block>footer_layout</block>
			<default>footerv1</default>
			<option>
				<text>Footer default</text>
				<value>footer</value>
			</option>
			<option>
				<text>Footer version 1</text>
				<value>footerv1</value>
			</option>
			<option>
				<text>Footer version 2</text>
				<value>footerv2</value>
			</option>
		</item>
		<item>
			<label>Offcanvas menu</label>
			<block>offcanvas</block>
			<default>category</default>
			<option>
				 <text>Category</text>
				 <value>category</value>
			</option>
			<option>
				 <text>Megamenu</text>
				 <value>megamenu</value>
			</option>
		</item>
		<item>
			<label>Main Content Home FullWidth</label>
			<block>home_container_full</block>
			<default>0</default>
			<option>
				<text>No</text>
				<value>0</value>
			</option>
			<option>
				<text>Yes</text>
				<value>1</value>
			</option>
		</item>
		<item>
			<block>Layout</block>
			<default>fullwidth</default>
			<option>
				<text>Full Width</text>
				<value>fullwidth</value>
			</option>
			<option>
				<text>Boxed Large</text>
				<value>boxed-lg</value>
			</option>
		</item>
	</layout>
</themeeditor>