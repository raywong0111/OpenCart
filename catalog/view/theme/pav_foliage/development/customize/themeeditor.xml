<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>themepavo</author>
<name>Live Theme Editor</name>
<selectors>
	<items>
		<header>Body Content</header>
		<match>body</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>body,body #page</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>body,body #page</selector>
			<attrs>background-image</attrs>
		</item>
	 	<item>
			<type>fontsize</type>
			<label>Font-Size</label>
			<selector>body,body #page</selector>
			<attrs>font-size</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>body,body #page</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>body a,body #page a</selector>
			<attrs>color</attrs>
		</item>
	</items>

	<items>
		<header>Top Bar</header>
		<match>top-bar</match>
		<item>
			<type>text</type>
			<label>Background </label>
			<selector>.topbar</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text color </label>
			<selector>.topbar #cart-top .dropdown-menu p</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>.topbar a, .topbar .groupheader .box-setting .dropdown-toggle</selector>
			<attrs>color</attrs>
		</item>
	</items>

	<items>
		<header>Main Menu</header>
		<match>pav-mainnav</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#pav-megamenu</selector>
			<attrs>background-color</attrs>
		</item>
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#pav-megamenu .navbar-nav li a</selector>
			<attrs>color</attrs>
		</item>
	</items>

	<items>
		<header>Footer Center</header>
		<match>footer-center</match>
		<item>
			<type>text</type>
			<label>Background </label>
			<selector>footer</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text color</label>
			<selector>footer .widget-html ul li, footer .pav-newsletter h4</selector>
			<attrs>color</attrs>
		</item>
	</items>

	<items>
		<header>Powered</header>
		<match>powered</match>
		<item>
			<type>text</type>
			<label>Background </label>
			<selector>.copyright</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Text color</label>
			<selector>.copyright</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Link color</label>
			<selector>.copyright a</selector>
			<attrs>color</attrs>
		</item>
	</items>

</selectors>

<elements>
	<items>
		<header>Products</header>
		<match>product</match>
		<item>
			<type>text</type>
			<label>Product Name</label>
			<selector>.product-block .name a</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Color Price New</label>
			<selector>.price .price-new</selector>
			<attrs>color</attrs>
		</item>
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>.price .price-old, .price .price-olds</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Icon color</label>
			<selector>
				.action .btn-action, .product-meta .wishlist button i
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Icon background</label>
			<selector>
				.action .btn-action
			</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Rating color</label>
			<selector>
				.product-block .rating span.rate i
			</selector>
			<attrs>color</attrs>
		</item>
		
		<item>
			<type>text</type>
			<label>Cart Color</label>
			<selector>
				.add-links .cart .btn-action
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Cart background</label>
			<selector>
				.add-links .cart .btn-action
			</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Color Sale</label>
			<selector>.product-block .sale-exist</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Background Sale</label>
			<selector>.product-block .sale-exist</selector>
			<attrs>background-color</attrs>
		</item>
	</items>

</elements>
</themeeditor>
